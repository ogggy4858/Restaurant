<!doctype html>
<html lang="en">
<head>
    <title>Quản trị hệ thống</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Libraries/css/style.css">
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <h4 style="color: white">
                    Quản lý dữ liệu
                </h4>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="~/Admin/User/Index">User</a>
                    </li>
                    <li>
                        <a href="~/Admin/Menu/Index">Menu</a>
                    </li>
                    <li>
                        <a href="~/Admin/HotMenu/Index">Hot menu</a>
                    </li>
                    <li>
                        <a href="~/Admin/Food/Index">Food</a>
                    </li>
                    <li>
                        <a href="~/Admin/FoodCategory/Index">Food category</a>
                    </li>
                </ul>
                <h4 style="color: white">
                    Quản lý giao diện
                </h4>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="~/Admin/InterfaceManager/Banner">Banner</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/Info">Info Top</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/Welcome">Welcome</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/Service">Service</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/HotMenu">HotMenu</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/Menu">Menu</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/Image">Image</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/SynthesizeInfo">Info Bottom</a>
                    </li>
                    <li>
                        <a href="~/Admin/InterfaceManager/FoodCategory">FoodCategory</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" style="border: 1px solid #1D1919; border-radius: 5px;">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <h3 style="margin: auto; padding-left: 20px">@RenderSection("Title", required: true)</h3>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" style="font-weight: bold" href="/">Home</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="#">@User.Identity.Name</a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </nav>


            @RenderBody()
        </div>
    </div>

    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/Areas/Admin/Libraries/js/popper.js"></script>
    <script src="~/Areas/Admin/Libraries/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Libraries/js/main.js"></script>

    @RenderSection("scripts", false)
</body>
</html>

<div class="row">
    <div class="col-md-2">
        Tiêu đề feedback
    </div>
    <div class="col-md-2">
        Status
    </div>
</div>

@using (Html.BeginForm("Index", "FeedBack", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-2">
            <input type="text" value="@ViewBag.SearchKey" name="searchKey" class="form-control form-control-sm">
        </div>
        <div class="col-md-2">
            @Html.DropDownList("status", new SelectList(Common.CommonStatus.StatusFeedBack, "Key", "Value", ViewBag.Status), new { @class = "form-control form-control-sm" })
        </div>
        <div class="col-md-2">
            <button class="btn btn-sm btn-success" type="submit">Tìm kiếm</button>
            <button class="btn btn-sm btn-primary" id="clearFeedBack" type="button">Clear</button>
        </div>
    </div>
}
<div style="padding-bottom: 20px;"></div>
@model List<ViewModels.FoodCategoryVM>

<section class="ftco-menu">
    <div class="container-fluid">
        <div class="row d-md-flex">
            <div class="col-lg-4 ftco-animate img f-menu-img mb-5 mb-md-0" style="background-image: url(../../Areas/Admin/Libraries/images/@ViewBag.ImageFoodCategory);">
            </div>
            <div class="col-lg-8 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <a class="nav-link active" id="v-pills-@i-tab" data-toggle="pill" href="#v-pills-@i" role="tab" aria-controls="v-pills-@i" aria-selected="true">@Model[i].Name</a>
                                }
                                else
                                {
                                    <a class="nav-link" id="v-pills-@i-tab" data-toggle="pill" href="#v-pills-@i" role="tab" aria-controls="v-pills-@i" aria-selected="true">@Model[i].Name</a>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <div class="tab-pane fade show active" id="v-pills-@i" role="tabpanel" aria-labelledby="v-pills-@i-tab">
                                        <div class="row">
                                            @foreach (var item in Model[i].Foods)
                                            {
                                                <div class="col-md-4 text-center">
                                                    <div class="menu-wrap">
                                                        <a class="menu-img img mb-4" style="background-image: url(../../Areas/Admin/Libraries/images/@item.Image);"></a>
                                                        <div class="text">
                                                            <h3><a>@item.Name</a></h3>
                                                            <p>@item.Description</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="tab-pane fade" id="v-pills-@i" role="tabpanel" aria-labelledby="v-pills-@i-tab">
                                        <div class="row">
                                            @foreach (var item in Model[i].Foods)
                                            {
                                                <div class="col-md-4 text-center">
                                                    <div class="menu-wrap">
                                                        <a class="menu-img img mb-4" style="background-image: url(../../Areas/Admin/Libraries/images/@item.Image);"></a>
                                                        <div class="text">
                                                            <h3><a>@item.Name</a></h3>
                                                            <p>@item.Description</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
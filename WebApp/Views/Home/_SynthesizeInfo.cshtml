@model List<ViewModels.DesignVM>
@{
    string fileName = "";
    if (Model[0].Documents != null)
    {
        if (Model[0].Documents.FirstOrDefault() != null)
        {
            fileName = Model[0].Documents.FirstOrDefault().FileName;
        }
    }
}

<section class="ftco-counter ftco-bg-dark img" id="section-counter" style="background-image: url(../../Areas/Admin/Libraries/images/@fileName);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <div class="icon"><span class="flaticon-medal"></span></div>
                                <span style="font-weight: 400; font-size: 30px; color: #fac564;">
                                    @Model[0].Title
                                </span>
                                <span>@Model[0].Content</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <div class="icon"><span class="flaticon-laugh"></span></div>
                                <span style="font-weight: 400; font-size: 30px; color: #fac564;">
                                    @Model[1].Title
                                </span>
                                <span>@Model[1].Content</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 d-flex justify-content-center counter-wrap ftco-animate">
                        <div class="block-18 text-center">
                            <div class="text">
                                <div class="icon"><span class="flaticon-chef"></span></div>
                                <span style="font-weight: 400; font-size: 30px; color: #fac564;">
                                    @Model[2].Title
                                </span>
                                <span>@Model[2].Content</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
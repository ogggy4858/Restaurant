@model ViewModels.DesignVM

@{
    string fileName = "";
    if (Model.Documents == null)
    {
        fileName = "../../assets/images/bg_3.jpg";
    }
    else
    {
        fileName = "../../Areas/Admin/Libraries/images/" + Model.Documents.FirstOrDefault().FileName;
    }

    var info = ViewBag.Info as List<ViewModels.DesignVM>;
}

<section class="home-slider owl-carousel img">
    <div class="slider-item" style="background-image: url(@fileName);">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center" data-scrollax-parent="true">
                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <span class="subheading">@Model.Quote</span>
                    <h1 class="mb-4">@Model.Title</h1>
                    <p class="mb-4 mb-md-5">@Model.Content</p>
                    <p>
                        <a href="~/Home/Menu" class="btn btn-primary p-3 px-xl-4 py-xl-3">
                            Xem menu
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@model WebApp.Models.RegisterViewModel
@{
    Layout = null;
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row" style="padding-top: 160px;">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <span class="control-label col-md-2">
                        Email
                    </span>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <span class="control-label col-md-2">
                        Mật khẩu
                    </span>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <span class="control-label col-md-2">Nhập lại mật khẩu</span>
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Đăng ký" />
                        <a href="/">Quay lại</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
